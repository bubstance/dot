#!/bin/sh

case $BLOCK_BUTTON in
	2) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "Internet module" "\- Middle click to open nmtui
ïž wifi disabled
ï± no wifi connection
ï‡« wifi connection with quality
ï…† no ethernet
ï‚¬ ethernet working
ï›º vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null ; then
	wifiicon="$(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "%" }' /proc/net/wireless)"
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null ; then
	grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="ï± " || wifiicon="ïž "
fi

# printf "[ %s%s \n" "$wifiicon" "$(sed "s/.*/ðŸ”’/" /sys/class/net/tun*/operstate 2>/dev/null)"

printf "[ %s%s%s \n" "$wifiicon" "$(sed "s/down/ ï…†/;s/up/ ï‚¬/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ ï›º/" /sys/class/net/tun*/operstate 2>/dev/null)"
